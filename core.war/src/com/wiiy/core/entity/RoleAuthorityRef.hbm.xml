<?xml version = "1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.wiiy.core.entity.RoleAuthorityRef">
    	<meta attribute="class-description">角色权限关联</meta> 
    	<meta attribute="extends">com.wiiy.commons.entity.BaseEntity</meta>
        <id name="id" unsaved-value="-1" type="java.lang.Long">
			<generator class="native"/>
		</id>
   		<many-to-one name="role" class="com.wiiy.core.entity.Role" foreign-key="fk_role_authority" fetch="join">
			<column name="role_id">
				<comment>所属角色</comment>
			</column>
		</many-to-one>
        <property name="moduleId" not-null="true" type="java.lang.String">
			<column name="module_id">
				<comment>模块ID</comment>
			</column>
        </property>
        <property name="authorityId" not-null="true" type="java.lang.String">
			<column name="authority_id">
				<comment>权限ID</comment>
			</column>
        </property>
        <property name="authorityType" type="java.lang.String">
        	<column name="authority_type">
				<comment>类别</comment>
			</column>
		</property>
         <property name="entityStatus">
        	<column name="entity_status">
				<comment>实体状态</comment>
			</column>
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.wiiy.commons.preferences.enums.EntityStatus</param>
				<param name="type">12</param>
			</type>
		</property>
		<property name="createTime" type="java.util.Date">
			<meta attribute="gen-property">false</meta>
			<column name="create_time">
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="creator" type="java.lang.String" length="100">
			<meta attribute="gen-property">false</meta>
			<column name="creator">
				<comment>创建人姓名</comment>
			</column>
		</property>
		<property name="creatorId" type="java.lang.Long">
			<meta attribute="gen-property">false</meta>
			<column name="creator_id">
				<comment>创建人ID</comment>
			</column>
		</property>
		<property name="modifyTime" type="java.util.Date">
			<meta attribute="gen-property">false</meta>
			<column name="modify_time">
				<comment>修改时间</comment>
			</column>
		</property>
		<property name="modifier" type="java.lang.String" length="100">
			<meta attribute="gen-property">false</meta>
			<column name="modifier">
				<comment>修改人姓名</comment>
			</column>
		</property>
		<property name="modifierId" type="java.lang.Long">
			<meta attribute="gen-property">false</meta>
			<column name="modifier_id">
				<comment>修改人ID</comment>
			</column>
		</property>
    </class>
</hibernate-mapping>