<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.wiiy.business.entity.BusinessDeposit">
        <meta attribute="class-description">押金</meta> 
    	<meta attribute="extends">com.wiiy.commons.entity.BaseEntity</meta>
		<id name="id" unsaved-value="-1" type="java.lang.Long">
			<generator class="native" />
		</id>
		<property name="contractId" type="java.lang.Long">
			<column name="contract_id">
				<comment>合同外键</comment>
			</column>
		</property>
        <many-to-one name="contract" class="com.wiiy.business.entity.BusinessContract" foreign-key="fk_business_deposit_contract" insert="false" update="false" fetch="join">
            <column name="contract_id">
                <comment>合同</comment>
            </column>
        </many-to-one>
        <property name="customerId" type="java.lang.Long">
			<column name="customer_id">
				<comment>企业外键</comment>
			</column>
		</property>
        <many-to-one name="customer" class="com.wiiy.business.entity.BusinessCustomer" foreign-key="fk_business_deposit_customer" insert="false" update="false" fetch="join">
            <column name="customer_id">
                <comment>企业</comment>
            </column>
        </many-to-one>
        <property name="type">
			<column name="type" sql-type="varchar(50)">
				<comment>保证金类型</comment>
			</column>
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.wiiy.business.preferences.enums.DepositTypeEnum</param>
				<param name="type">12</param>
			</type>		
		</property>
		<property name="planPayDate" type="java.util.Date">
			<column name="plan_pay_date" length="19">
				<comment>计划付费时间</comment>
			</column>
		</property>
		<property name="amount" type="java.lang.Double">
			<column name="amount" precision="10" scale="2">
				<comment>金额</comment>
			</column>
		</property>
		
		<property name="memo" type="java.lang.String" length="1024">
            <column name="memo" sql-type="text">
                <comment>备注</comment>
            </column>
        </property>
		
		<property name="status">
			<column name="status" sql-type="varchar(50)">
				<comment>状态</comment>
			</column>
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.wiiy.common.preferences.enums.BillPlanStatusEnum</param>
				<param name="type">12</param>
			</type>		
		</property>
        
        
		<property name="entityStatus">
        	<column name="entity_status">
				<comment>实体状态</comment>
			</column>
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">com.wiiy.commons.preferences.enums.EntityStatus</param>
				<param name="type">12</param>
			</type>
		</property>
		<property name="createTime" type="java.util.Date">
			<meta attribute="gen-property">false</meta>
			<column name="create_time">
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="creator" type="java.lang.String" length="100">
			<meta attribute="gen-property">false</meta>
			<column name="creator">
				<comment>创建人姓名</comment>
			</column>
		</property>
		<property name="creatorId" type="java.lang.Long">
			<meta attribute="gen-property">false</meta>
			<column name="creator_id">
				<comment>创建人ID</comment>
			</column>
		</property>
		<property name="modifyTime" type="java.util.Date">
			<meta attribute="gen-property">false</meta>
			<column name="modify_time">
				<comment>修改时间</comment>
			</column>
		</property>
		<property name="modifier" type="java.lang.String" length="100">
			<meta attribute="gen-property">false</meta>
			<column name="modifier">
				<comment>修改人姓名</comment>
			</column>
		</property>
		<property name="modifierId" type="java.lang.Long">
			<meta attribute="gen-property">false</meta>
			<column name="modifier_id">
				<comment>修改人ID</comment>
			</column>
		</property>
    </class>
</hibernate-mapping>
